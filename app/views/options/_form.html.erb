<%= form_for @option, :html => { :class => "form-horizontal option" } do |f| %>

  <% if @option.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @option.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :answer, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :question_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :question_name, :class => 'form-control', :disabled => true%>
    </div>
    <%=f.error_span(:question_name) %>
  </div>
  <div class="form-group">
    <%= f.label :dependent_question, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dependent_question, :class => 'form-control'%>
    </div>
    <%=f.error_span(:dependent_question) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                options_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
